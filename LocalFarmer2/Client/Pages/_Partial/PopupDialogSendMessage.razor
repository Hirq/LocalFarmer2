@namespace LocalFarmer2.Client.Pages


<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Email" Variant="Variant.Text" @bind-Value="EmailFrom"></MudTextField>
        <MudTextField T="string" Label="@loc["Farmhouse_Message"]" Variant="Variant.Outlined" Lines="3" @bind-Value="Message" Class="mt-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@loc["X_Cancel"]</MudButton>
        <MudButton OnClick="() => SendMessage()" Color="@ColorButton" Variant="Variant.Filled">@ButtonName</MudButton>
    </DialogActions>
</MudDialog>

    @code {
    [Parameter]
    public string ButtonName { get; set; }

    [Parameter]
    public MudBlazor.Color ColorButton { get; set; }

    [Parameter]
    public Action Action { get; set; }
    
    [Parameter]
    public string EmailTo { get; set; }

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private string EmailFrom = "";
    private string Message = "";

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

}