@namespace LocalFarmer2.Client.Pages

<MudDialog ClassActions="justify-content-between">
    <DialogContent>
        <MudTextField T="string" @ref="titleField" Label="@loc["X_Title"]" Required RequiredError="@loc["Validation_Required"]" Variant="Variant.Text" @bind-Value="Note.Name"></MudTextField>
        <MudTextField T="string" @ref="textField" Label="@loc["X_Text"]" RequiredError="@loc["Validation_Required"]" Variant="Variant.Text" @bind-Value="Note.Text" Lines="3" />
    </DialogContent>
     <DialogActions>
        <div>
            @if(IsEdit)
            {
                <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="() => { ActionArchive?.Invoke(); Submit(); }">@loc["X_Archive"]</MudButton>
            }
        </div>
        <div>
            <MudButton OnClick="Cancel">@loc["X_Cancel"]</MudButton>
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="() => { Action?.Invoke(); Submit(); }">@ButtonName</MudButton>
        </div>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Note Note { get; set; }

    [Parameter]
    public Action Action { get; set; }   
    
    // 0 - Add
    // 1 - Edit
    [Parameter]
    public bool IsEdit { get; set; }    
    
    [Parameter]
    public Action ActionArchive { get; set; }

    [Parameter]
    public string ButtonName { get; set; }

    private MudTextField<string> titleField;
    private MudTextField<string> textField;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}