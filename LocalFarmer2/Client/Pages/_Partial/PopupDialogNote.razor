@namespace LocalFarmer2.Client.Pages

<MudDialog>
    <DialogContent>
        <MudTextField T="string" @ref="titleField" Label="@loc["X_Title"]" RequiredError="@loc["Validation_Required"]" Variant="Variant.Text" @bind-Value="Note.Name"></MudTextField>
        <MudTextField T="string" @ref="textField" Label="@loc["X_Text"]" Required RequiredError="@loc["Validation_Required"]" Variant="Variant.Text" @bind-Value="Note.Text" Lines="3" />
        @* <MudTextField T="string" @ref="textField" Label="@loc["X_Text"]" Required RequiredError="@loc["Validation_Required"]" Variant="Variant.Text" @bind-Value="Note.Text"></MudTextField> *@
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@loc["X_Cancel"]</MudButton>
        <MudButton OnClick="() => { Action?.Invoke(); Submit(); }" Color="Color.Secondary" Variant="Variant.Filled">@ButtonName</MudButton>
    </DialogActions>
</MudDialog>

    @code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Note Note { get; set; }

    [Parameter]
    public Action Action { get; set; }

    [Parameter]
    public string ButtonName { get; set; }

    private MudTextField<string> titleField;
    private MudTextField<string> textField;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}