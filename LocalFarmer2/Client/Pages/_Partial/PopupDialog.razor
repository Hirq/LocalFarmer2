@namespace LocalFarmer2.Client.Pages

<MudDialog>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@loc["X_Cancel"]</MudButton>
        <MudButton OnClick="@Action" Color="@ColorButton" Variant="Variant.Filled">@ButtonName</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public string ButtonName { get; set; }

    [Parameter]
    public MudBlazor.Color ColorButton { get; set; }

    [Parameter]
    public string Content { get; set; }

    [Parameter]
    public Action Action { get; set; }

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}