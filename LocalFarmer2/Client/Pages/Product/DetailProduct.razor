<h2>@product.Name - @product.Id</h2>

<MudPaper Class="pa-4">
    <MudStack Spacing="2">
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OnExpandCollapsePrimary">@(_expandedPrimary ? @loc["Button_Basic_Info"] : @loc["Button_Basic_Info"])</MudButton>
        <MudDivider />
        <MudCollapse Expanded="_expandedPrimary">
            <MudGrid>
                <MudItem xs="1">
                    <div class="fw-bolder"> @loc["X_Name"] </div>
                </MudItem>
                <MudItem xs="11">
                    @product.Name
                </MudItem>
                <MudItem xs="1">
                    <div class="fw-bolder"> @loc["X_Description"] </div>
                </MudItem>
                <MudItem xs="11">
                    @product.Description
                </MudItem>
            </MudGrid>
        </MudCollapse>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OnExpandCollapsePrice">@(_expandedPrice ? @loc["Button_Prize_Info"] : @loc["Button_Prize_Info"])</MudButton>
        <MudDivider />
        <MudCollapse Expanded="_expandedPrice">
            <MudGrid>
                <MudItem xs="1">
                    <div class="fw-bolder"> @loc["Product_Minimal_Amount"] </div>
                </MudItem>
                <MudItem xs="11">
                    @product.CountMinOne
                </MudItem>
                <MudItem xs="1">
                    <div class="fw-bolder"> @loc["Product_Prize_One"] </div>
                </MudItem>
                <MudItem xs="11">
                    @product.PrizeOne
                </MudItem>
                <MudItem xs="1">
                    <div class="fw-bolder"> @loc["Product_Total_Quantity"] </div>
                </MudItem>
                <MudItem xs="11">
                    @product.CountAll
                </MudItem>
            </MudGrid>
        </MudCollapse>
    </MudStack>
</MudPaper>

@if (product.ImageData != null && !string.IsNullOrEmpty(product.ImageMimeType))
{
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-1 mb-1" OnClick="OnExpandCollapsePhoto">@(_expandedPhoto ? @loc["Button_Hide_Photo"] : @loc["Button_Show_Photo"])</MudButton>
    <MudPaper Class="pa-4">
        <MudStack Spacing="2">
            <MudDivider />
            <MudCollapse Expanded="_expandedPhoto">
                <img src="@($"data:{product.ImageMimeType};base64,{Convert.ToBase64String(product.ImageData)}")" alt="Product Image" />
            </MudCollapse>
        </MudStack>
    </MudPaper>
}

@code {
    [Parameter]
    public int Id { get; set; }
    private bool _expandedPhoto = false;
    private bool _expandedPrimary = false;
    private bool _expandedPrice = false;
    Product product = new Product();

    private void OnExpandCollapsePhoto()
    {
        _expandedPhoto = !_expandedPhoto;
    }

    private void OnExpandCollapsePrimary()
    {
        _expandedPrimary = !_expandedPrimary;
    }

    private void OnExpandCollapsePrice()
    {
        _expandedPrice = !_expandedPrice;
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id != 0)
        {
            product = await ProductService.GetProduct(Id);
        }
    }
}
